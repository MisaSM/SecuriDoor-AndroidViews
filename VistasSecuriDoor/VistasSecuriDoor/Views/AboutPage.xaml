<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VistasSecuriDoor.Views.AboutPage"
             xmlns:vm="clr-namespace:VistasSecuriDoor.ViewModels"
             Title="SecuriDoor">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                <Label Text="Integrantes del equipo" FontSize="Title"/>
                <Label Text="Jorge Arturo Bernal Espinoza" FontSize="16" Padding="0,0,0,0"/>
                <Label Text="Misael Sarabia Molina" FontSize="16" Padding="0,0,0,0"/>
            </StackLayout>
            
            
            

        </ScrollView>
    </Grid>

</ContentPage>



